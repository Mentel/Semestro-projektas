{% extends 'base.html.twig' %}

{% block title %}Paskyrų sąrašas{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4 ml-2">Naudotojų paskyros</h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">El. Paštas</th>
                    <th scope="col">Rolės</th>
                    <th scope="col">Sukūrimo laikas</th>
                    <th scope="col">Patvirtinimo kodas</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.email }}</td>
                    <td>
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                    </td>
                    <td>{{ user.createdAt.format('Y-m-d H:i') }}</td>
                    <td>{{ user.verify }}</td>
                    <td><a onclick="return confirm('Tikrai ištrinti?');" href="{{ url('app_user_delete',{id: user.id}) }}">Ištrinti</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
