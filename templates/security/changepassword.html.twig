{% extends 'base.html.twig' %}

{% block title %}Slaptažodžio pakeitimas{% endblock %}

{% block body %}


<div class="row justify-content-center">
    <div class="card">
        <div class="card-body">
            {{ form_start(changepasswordForm) }}
            <h1 class="h3 mb-3 mt-3 font-weight-normal">Slaptažodžio keitimas</h1>
            {% if error|length > 0 %}
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            {% endif %}


            <div class="form-group">
                <label for="exampleInputOldPassword1">Dabartinis slaptažodis</label>
                {{ form_widget(changepasswordForm.oldPassword, {'attr': {'type': 'password', 'class': 'form-control', 'name': 'oldPassword', 'id': 'oldPassword', 'required': '', 'placeholder': 'Slaptažodis'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputOldPassword1">Naujas slaptažodis</label>
                {% if form_errors(changepasswordForm.newPassword.first)|length > 0 %}
                    <div class="alert alert-danger">
                        {{ form_errors(changepasswordForm.newPassword.first) }}
                    </div>
                {% endif %}

                {{ form_widget(changepasswordForm.newPassword.first, {'attr': {'type': 'password', 'class': 'form-control', 'name': 'newPassword', 'id': 'newPassword', 'required': '', 'placeholder': 'Slaptažodis'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(changepasswordForm.newPassword.second, {'attr': {'type': 'password', 'class': 'form-control', 'name': 'newPassword', 'id': 'newPassword', 'required': '', 'placeholder': 'Pakartokite'}}) }}
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-success">Pakeisti slaptažodį</button>
            </div>
            {{ form_end(changepasswordForm) }}

        </div>
    </div>
</div>


{% endblock %}
