{% extends 'base.html.twig' %}

{% block title %}Kategorijos kūrimas{% endblock %}

{% block body %}
    <div class="row justify-content-center pt-3">
        <div class="card">
            <div class="card-body">
                {{ form_start(createCategory) }}
                {% if message|length > 0 %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endif %}
                <h1 class="h3 mb-3 mt-3 font-weight-normal">Kategorijos kūrimas</h1>
                <div class="form-group">
                    <label for="exampleCategoryName">Kategorijos pavadinimas</label>
                    {{ form_errors(createCategory.categoryName) }}
                    {{ form_widget(createCategory.categoryName, {'attr': {'type': 'text', 'class': 'form-control',
                        'name': 'name', 'id': 'name', 'required': '', 'autofocus': '', 'placeholder': 'Pavadinimas'}}) }}
                </div>
                <div class="row justify-content-center">
                    <button type="submit" class="btn btn-success">Pridėti</button>
                </div>
                {{ form_end(createCategory) }}
            </div>
        </div>
    </div>
{% endblock %}