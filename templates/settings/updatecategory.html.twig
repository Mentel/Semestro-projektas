{% extends 'base.html.twig' %}

{% block title %}Kategorijos atnaujinimas{% endblock %}

{% block body %}
    <div class="row justify-content-center pt-3">
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <h1 class="h3 mb-3 mt-3 font-weight-normal">Kategorijos atnaujinimas</h1>
            <div class="form-group">
                <label for="exampleCategoryName">Kategorija</label>
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'type': 'text', 'class': 'form-control', 'name': 'name', 'id': 'name', 'required': '', 'autofocus': '', 'placeholder': 'Pavadinimas'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleCategoryName">Naujas pavadinimas</label>
                {{ form_errors(form.newName) }}
                {{ form_widget(form.newName, {'attr': {'type': 'text', 'class': 'form-control', 'name': 'name', 'id': 'name', 'required': '', 'autofocus': '', 'placeholder': 'Pavadinimas'}}) }}
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-success">Atnaujinti</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
{% endblock %}
