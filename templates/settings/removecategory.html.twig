{% extends 'base.html.twig' %}

{% block title %}Kategorijos šalinimas{% endblock %}

{% block body %}
    <div class="row justify-content-center pt-3">
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {% if message|length > 0 %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endif %}
            <h1 class="h3 mb-3 mt-3 font-weight-normal">Kategorijos šalinimas</h1>
            <div class="form-group">
                <label for="exampleCategoryName">Kategorija</label>
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'type': 'text', 'class': 'form-control', 'name': 'name', 'id': 'name',
                    'required': '', 'autofocus': '', 'placeholder': 'Pavadinimas'}}) }}
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-success" onclick="return confirm('Tikrai šalinti?');">Šalinti</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
{% endblock %}
