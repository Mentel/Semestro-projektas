{% extends 'base.html.twig' %}

{% block title %}{{ name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card mb-3" style="max-width: 1000px; min-width: 1000px">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-3">
                        <img class="rounded" src="{{ asset('images/placeholder.png') }}">
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <h2><div class="text-truncate" style="max-width: 700px">{{ name }}</div></h2>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col ml-2">
                                {% if price == 0 %}
                                    <h4>Kaina: Nemokamai</h4>
                                {% else %}
                                    <h4>Kaina: {{ price }} €</h4>
                                {% endif %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ml-2">
                                <h5>Data: {{ date.format('Y-m-d H:i') }}</h5>
                            </div>
                            <div class="col">
                                <h5>Vieta: {{ address }}</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col ml-2">
                                <h7>Kategorijos:
                                    {% for category in categories %}
                                        {{ category.name }}
                                    {% endfor %}
                                </h7>
                            </div>
                            <div class="col-2 ml-2">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <h7><a onclick="return confirm('Tikrai ištrinti?');" href="{{ url('app_event_delete',{id: id}) }}">Ištrinti</a></h7>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col ml-2 mt-3">
                        <div class="text-justify" style="max-width: 950px">
                            {{ description }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

